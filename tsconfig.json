{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // enables ESM
    "moduleResolution": "bundler", // resolves CJS+ESM packages like in Node.js
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true
  }
}