{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // enables ESM
    "moduleResolution": "node", // resolves CJS+ESM packages like in Node.js
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src",
    "src/types/coinselect.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  }
}